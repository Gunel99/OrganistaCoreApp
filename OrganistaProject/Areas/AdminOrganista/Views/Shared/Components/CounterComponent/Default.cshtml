        </div>
    </div>

    <div class="col-md-3 col-sm-12 col-xs-12">
        <div class="board mt-3">
            <div class="panel panel-primary">
                <div class="number">
                    <h3>
                    </h3><h3>@Model.Companies.Count()</h3>
                    <small>Companies</small>

                </div>
                <a asp-action="Index" asp-controller="Company">
                    <div class="icon">
                        <i class="far fa-building fa-5x yellow" style="font-size: 30px; color: #FFFFFF; padding: 19px;"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

