@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Edit Slider</h2>
</div>

<form asp-controller="Slider" asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <img src="~/img/@Model.Image" width="120" />
        <input type="file" name="file" id="file" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i>
        Save
    </button>
    <button asp-action="Index" type="submit" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-reload btn-icon-prepend"></i>
        Cancel
    </button>
</form>





