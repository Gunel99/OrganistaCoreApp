@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Slider List</h2>
</div>

@if (Model.Count() > 0)
{
<table class="table">
    <thead class="thead-light">
        <tr>
        <tr>
            <th>Id</th>
            <th style="padding-left: 20px;">Image</th>
            <th style="padding-left: 20px;">Slider Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Slider slider in Model)
        {
        <tr class="border-bottom:1px solid">
            <td>@slider.Id</td>
            <td>
                <img src="~/img/@slider.Image" style="border-radius:0; width:245px !important; height:165px !important" alt="image" />
            </td>
            <td style="font-family:auto;font-size: 18px;">
                @slider.Title
            </td>
            <td>
                <form asp-route-id="@slider.Id" asp-action="Delete" method="post">
                    <a class="btn btn-primary" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id">
                        <i class="far fa-edit"></i>
                    </a>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="alert alert-danger">
        There are not any sliders.
    </div>
}
   

@{ if (ViewBag.SliderCount < 3)
    {
        <a asp-area="AdminOrganista" asp-controller="Slider" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
            Create New Slider
        </a>
    }
}



