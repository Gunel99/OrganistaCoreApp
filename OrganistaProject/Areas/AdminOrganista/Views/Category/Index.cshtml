@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Category List</h2>
</div>

@if (Model.Count() == 0)
{
    <p style="text-align: center;
    font-size: 25px;
    font-family: auto;
    margin: 40px 0px;">No Categories</p>
}
else
{
    <h6 class="m-0" style="padding: 10px; background: #5dbcd2; color: white;">
        Categories
    </h6>


    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th scope="col">Name</th>
                <th style="width:180px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <form asp-route-id="@category.Id" asp-action="Delete" method="post">
                            <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"><i class="far fa-edit"></i></a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-area="AdminOrganista" asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
        Create Category
    </a>
}

