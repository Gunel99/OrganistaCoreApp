@model IEnumerable<Newsletter>
@{
    ViewData["Title"] = "Index";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Email List</h2>
</div>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var email in Model)
            {
                <tr class="border-bottom:1px solid">
                    <td>@email.Id</td>
                    <td>@email.Email</td>
                    <td>
                        <form asp-route-id="@email.Id" asp-action="Delete" method="post">
                            <a class="btn btn-info" asp-controller="Emails" asp-action="Info" asp-route-id="@email.Id">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-area="AdminOrganista" asp-controller="Emails" asp-action="SendEmail" class="btn btn-success" style="margin: 30px 40px;">
        <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
        Send Email
    </a>

}
else
{
    <div class="alert alert-danger">
        There are not any emails.
    </div>
}

