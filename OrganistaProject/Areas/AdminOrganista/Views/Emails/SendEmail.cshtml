
@{
    ViewData["Title"] = "SendEmail";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Send message<span style="color:deepskyblue"></span></h2>
</div>


<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" name="Email" id="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input type="text" name="Subject" id="Subject" class="form-control" />
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea type="text" name="Message" id="Message" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i>
        Send Email
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-reload btn-icon-prepend"></i>
        Cancel
    </a>
</form>


