@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Product List</h2>
</div>

@if (Model.Count() == 0)
{
    <p style="text-align: center;
    font-size: 25px;
    font-family: auto;
    margin: 40px 0px;">No Products</p>
}
else
{
    <h6 class="m-0" style="padding: 10px; background: #5dbcd2; color: white;">
        Products
    </h6>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">IsApproved</th>
                <th scope="col">IsHome</th>
                <th scope="col">IsFeatured</th>
                <th style="width:180px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        <img style="width:70px; height:65px;" src="~/img/@product.Image" />
                    </td>
                    <td>@product.Name</td>
                    <td>
                        @if (product.IsApproved)
                        {
                            <span style="font-size: 20px">&#10004;</span>
                        }
                        else
                        {
                            <span style="font-size: 20px">&#10006;</span>
                        }
                    </td>
                    <td>
                        @if (product.IsHome)
                        {
                            <span style="font-size: 20px">&#10004;</span>
                        }
                        else
                        {
                            <span style="font-size: 20px">&#10006;</span>
                        }
                    </td>
                    <td>
                        @if (product.IsFeatured)
                        {
                            <span style="font-size: 20px">&#10004;</span>
                        }
                        else
                        {
                            <span style="font-size: 20px">&#10006;</span>
                        }
                    </td>
                    <td>
                        <form asp-route-id="@product.Id" asp-action="Delete" method="post">
                            <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">
                                <i class="far fa-edit"></i>
                            </a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-area="AdminOrganista" asp-controller="Product" asp-action="Create" class="btn btn-primary">
    <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
    Create Product
</a>





