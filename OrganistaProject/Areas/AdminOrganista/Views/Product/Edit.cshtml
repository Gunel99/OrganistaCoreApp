@model Product
@{
    ViewData["Title"] = "Edit";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Edit Product</h2>
</div>

<form asp-controller="Product" asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="HtmlContent"></label>
        <textarea asp-for="HtmlContent" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <img src="~/img/@Model.Image" width="120" />
        <input type="file" name="file" id="file" class="form-control">
    </div>
    <div class="form-check">
        <label class=" form-check-label">
            <input asp-for="IsApproved" class="form-check-input" />
            is Approved
        </label>
    </div>
    <div class="form-check">
        <label class=" form-check-label">
            <input asp-for="IsHome" class="form-check-input" />
            is Home
        </label>
    </div>
    <div class="form-check">
        <label class=" form-check-label">
            <input asp-for="IsFeatured" class="form-check-input" />
            is Featured
        </label>
    </div>
    <div class="form-group">
        <label>Categories</label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option disabled selected value="">
                Select Category
            </option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i>
        Submit
    </button>
    <button asp-action="Index" type="submit" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-reload btn-icon-prepend"></i>
        Cancel
    </button>
</form>





