@model CommentFromPage
@{
    ViewData["Title"] = "Info";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0"><span style="color:deepskyblue">@Model.Email</span> comment</h2>
</div>

<form class="mt-4">
    <div class="row ml-2">
        <div class="form-group" style="width:49.5%">
            <label asp-for="@Model.Fullname" style="font-family:auto; font-size:18px; padding-left:25px"></label>
            <input asp-for="@Model.Fullname" class="form-control" disabled />
        </div>
        <div class="form-group" style="width:49.5%">
            <label asp-for="@Model.Email" style="font-family:auto; font-size:18px; padding-left:25px"></label>
            <input asp-for="@Model.Email" class="form-control" disabled />
        </div>
    </div>
    <div class="row ml-2">
        <div class="form-group w-100">
            <label asp-for="@Model.Comment" style="font-family:auto; font-size:18px; padding-left:25px"></label>
            <textarea asp-for="@Model.Comment" rows="10" cols="20" class="form-control" disabled></textarea>
        </div>
    </div>
    <a asp-controller="Comment" asp-action="SendEmail" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i>
        Send Email
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-reload btn-icon-prepend"></i>
        Cancel
    </a>
</form>



