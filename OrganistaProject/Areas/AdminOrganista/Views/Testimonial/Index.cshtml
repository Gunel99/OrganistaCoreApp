@model IEnumerable<Testimonial>
@{
    ViewData["Title"] = "Index";
}

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Testimonial List</h2>
</div>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Profession</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var testimonial in Model)
            {
                <tr class="border-bottom:1px solid">
                    <td>@testimonial.Id</td>
                    <td>
                        <img src="~/img/@testimonial.Image" style="border-radius:0; width:160px; height:110px" />
                    </td>
                    <td style="font-family: auto; font-size: 18px;">@testimonial.Name</td>
                    <td>@testimonial.Profession</td>
                    <td>
                        <form asp-route-id="@testimonial.Id" asp-action="Delete" method="post">
                            <a class="btn btn-info" asp-controller="Testimonial" asp-action="Info" asp-route-id="@testimonial.Id">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a class="btn btn-primary" asp-controller="Testimonial" asp-action="Edit" asp-route-id="@testimonial.Id">
                                <i class="far fa-edit"></i>
                            </a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        There are not any testimonials.
    </div>
}
<a asp-area="AdminOrganista" asp-controller="Testimonial" asp-action="Create" class="btn btn-success" style="margin: 30px 40px;">
    <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
    Create Testimonial
</a>


