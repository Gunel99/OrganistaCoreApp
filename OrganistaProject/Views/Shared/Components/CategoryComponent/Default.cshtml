@model IEnumerable<CategoryModel>

<div class="categories">
    <div class="title">
        <h5>Category</h5>
    </div>
    <div class="content">
        <ul class="p-0 m-0">
            @foreach (var category in Model)
            {
                <li><a asp-controller="Product" asp-action="Index" asp-route-category="@category.Name"
                       class="d-flex justify-content-between"><span><i class="fas fa-chevron-right mr-3"></i>@category.Name </span><span>(@category.Count)</span></a></li>
            }
            
        </ul>
    </div>
</div>