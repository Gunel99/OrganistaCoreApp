        <div class="site_information d-flex justify-content-between">
            <div class="logo">
                <a href="#">
                    <img src="~/img/@Model.FooterLogo" alt="Organista">
                </a>
            </div>
            <div class="mobile_version">
                <a href="#"><img src="~/img/mobile_version1.png" alt=""></a>
                <a href="#"><img src="~/img/mobile_version2.png" alt=""></a>
            </div>
        </div>
        <div class="links">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
