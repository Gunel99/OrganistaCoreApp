@model IEnumerable<Blog>

<style>
    @@media only screen and (max-width: 1410px) {
        .content .featured_desc h5{
            font-size:14px!important;
        }
        .content .featured_desc span{
            font-size:12px!important;
        }
    }
    @@media only screen and (max-width: 1300px){
        .content .featured_desc span{
            display:none!important;
        }
        .content .featured_desc .noqte {
            display: none !important;
        }
    }
    
</style>
<div class="featured">
    <div class="title">
        <h5>Featured</h5>
    </div>
    <div class="contents">
        @foreach (var blog in Model)
        {
            <div class="content">
                <div class="row">
                    <div class="col-lg-4 col-md-2 p-0">
                        <div class="image" style="border:0;width:100%">
                            <img src="~/img/@blog.Image" alt="" style="margin: 20px 0px;">
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-10 p-0">
                        <div style="padding: 0px 15px !important;" class="featured_desc w-100">
                            <a style="padding: 0px 0px 70px 200px;" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                <h5 style="font-size: 16px;">@blog.Name</h5>
                                @if (blog.Description.Length >= 50)
                                {
                                    <span class="card-text pt-0" style="display:inline;">@blog.Description.Substring(0, 50)</span><a class="noqte" style="color:#838383;" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">...</a>
                                }
                                else
                                {
                                    <span>@blog.Description</span>
                                }
                            </a>
                        </div>
                    </div>
                </div>    
                
                
            </div>
        }
    </div>
</div>