@model IEnumerable<Product>

<style>
    @@media only screen and (max-width: 1220px) {
        .featured_desc h5 {
            font-size:16px !important;
            margin-top:-10px!important;
        }
    }
    @@media only screen and (max-width: 1120px) {
        .featured_desc h5 {
            font-size: 14px !important;
            margin-top: -20px !important;
        }
    }
    
</style>

    <div class="featured">
        <div class="title">
            <h5>Featured</h5>
        </div>
        <div class="contents">
            @foreach (var product in Model)
            {
                <div class="content">
                    <div class="row">
                        <div class="col-lg-4 col-md-3 p-0">
                            <div class="image w-100">
                                <img src="~/img/@product.Image" alt="">
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-9 p-0">
                            <div style="padding: 0px 15px !important;" class="featured_desc w-100">
                                <a style="padding: 0px 0px 70px 200px;" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                                    <h5>@product.Name</h5>
                                    <span>$@product.Price</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            }
        </div>
    </div>
