
    @model IEnumerable<Blog>
    @{
        ViewData["Title"] = "Index";
    }

<style>
    #blog_list {
        margin: 100px 0px;
    }
    #blog_list .container-fluid {
        padding: 0px 50px !important;
    }
        #blog_list .product_aside .search {
            padding: 25px 15px 25px 15px;
            box-shadow: 5px 20px 20px rgba(0, 0, 0, 0.04);
            border-radius: 10px;
            border: 1px solid #f0f2f3;
        }
        #blog_list .product_aside form input {
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            border: 1px solid #f0f2f3;
            padding: 10px 15px;
            min-width: 80%;
            border-right: 0;
            font-size: 14px;
        }
        #blog_list .product_aside form button {
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            border-left: 0;
            border: 1px solid #f0f2f3;
            padding: 9px 15px;
            background-color: #ffffff;
            transition: .3s;
        }
            #blog_list .product_aside form button:hover {
                background-color: #f0f2f3;
            }

            #blog_list .product_aside form button i {
                color: #838383;
            }

        #blog_list .product_aside .categories {
            margin-top: 70px;
        }

            #blog_list .product_aside .categories .title {
                width: 100%;
                position: relative;
            }
                #blog_list .product_aside .categories .title h5 {
                    padding-bottom: 15px;
                    color: #18181d;
                    font-family: 'Montserrat', sans-serif;
                    font-size: 20px;
                    font-weight: bold;
                }

                    #blog_list .product_aside .categories .title h5:after {
                        content: "";
                        width: 100%;
                        height: 3px;
                        left: 0;
                        bottom: 0;
                        position: absolute;
                        z-index: 9;
                        background: linear-gradient(to left, #f0f2f3 80%, #50BD4D 20%);
                    }

            #blog_list .product_aside .categories .content ul {
                list-style-type: none;
            }
                #blog_list .product_aside .categories .content ul li {
                    padding-top: 20px;
                    letter-spacing: 0.2px;
                }
                    #blog_list .product_aside .categories .content ul li a {
                        color: #838383;
                        font-size: 16px;
                        font-family: 'Open Sans', sans-serif;
                        transition: .3s;
                    }

                    #blog_list .product_aside .categories .content ul li:hover a {
                        color: #50BD4D;
                    }

        #blog_list .product_aside .featured {
            margin-top: 90px;
        }
            #blog_list .product_aside .featured .title {
                width: 100%;
                position: relative;
            }
                #blog_list .product_aside .featured .title h5 {
                    padding-bottom: 15px;
                    color: #18181d;
                    font-family: 'Montserrat', sans-serif;
                    font-size: 20px;
                    font-weight: bold;
                }

                    #blog_list .product_aside .featured .title h5:after {
                        content: "";
                        width: 100%;
                        height: 3px;
                        left: 0;
                        bottom: 0;
                        position: absolute;
                        z-index: 9;
                        background: linear-gradient(to left, #f0f2f3 80%, #50BD4D 20%);
                    }

            #blog_list .product_aside .featured .contents {
                margin-top: 40px;
            }
                #blog_list .product_aside .featured .contents .content {
                    cursor: pointer;
                    margin-bottom: 20px;
                }
                    #blog_list .product_aside .featured .contents .content:hover .image img {
                        background: #f0f2f3;
                    }

                    #blog_list .product_aside .featured .contents .content:hover .featured_desc h5 {
                        color: #50BD4D;
                    }

                    #blog_list .product_aside .featured .contents .content .image {
                        width: 50%;
                        border: 1px solid #f0f2f3;
                        border-radius: 5px;
                    }
                        #blog_list .product_aside .featured .contents .content .image img {
                            width: 100%;
                            transition: .3s;
                        }

                    #blog_list .product_aside .featured .contents .content .featured_desc {
                        padding: 10px 30px;
                    }
                        #blog_list .product_aside .featured .contents .content .featured_desc h5 {
                            font-family: 'Montserrat', sans-serif;
                            font-size: 18px;
                            color: #18181d;
                            transition: .3s;
                        }

                        #blog_list .product_aside .featured .contents .content .featured_desc span {
                            font-family: 'Open Sans', sans-serif;
                            font-size: 14px;
                            color: #838383;
                        }
        #blog_list .note {
            margin-bottom: 35px;
        }
            #blog_list .note .showing p {
                font-size: 16px;
            }

        #blog_list .products .card {
            box-shadow: 5px 20px 20px rgba(0, 0, 0, 0.04);
            cursor: pointer;
            border: 1px solid #f0f2f3;
            border-radius: 10px;
        }
            #blog_list .products .card .image {
                overflow: hidden;
                text-align: center;
            }
                #blog_list .products .card .image:hover img {
                    transform: scale(1.1) rotate(3deg);
                }
                #blog_list .products .card .image img {
                    transition: .3s;
                }
            #blog_list .products .card .content {
                color: #18181d;
                font-family: 'Montserrat', sans-serif;
                padding: 0px 20px;
                text-align: center;
                letter-spacing: .4px;
            }
                #blog_list .products .card .content h5 {
                    font-size: 20px;
                    margin-bottom: 10px;
                }
                   
                #blog_list .products .card .content p {
                    color: #838383;
                    font-family: 'Open Sans', sans-serif;
                    line-height: 1.8;
                }
        #blog_list .products .button {
            margin-top: 40px;
            margin-bottom: 30px;
            text-align: center;
        }

            #blog_list .products .button a {
                background: #50BD4D;
                color: #ffffff;
                text-transform: uppercase;
                letter-spacing: .2px;
                border: 1px solid #50BD4D;
                border-radius: 25px;
                padding: 15px 30px;
                font-weight: bold;
            }
            #blog_list .products .button a:hover{
                 background-color: #40a13d;
            }

    @@media only screen and (max-width: 992px) {
        #blog_list .product_aside {
            display:none!important;
        }
    }
</style>
    <!-- MAIN PART START -->

    <main>
        <!-- BLOG SECTION START -->
        <section id="about_us">
            <div class="container">
                <div class="row w-100 pl-3 m-0">
                    <div class="content w-100 d-flex justify-content-between">
                        <h1>Blog</h1>
                        <p><span>Home</span> > Blog</p>
                    </div>
                </div>
            </div>
        </section>
        <!-- ABOUT US SECTION END -->
        <!-- BLOG LIST PART START -->
        <section id="blog_list">
            <div class="container-fluid px-5">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="product_aside w-100 h-100">
                            <div class="search">
                                <form action="#" method="post" class="form-group d-flex m-0 w-100 h-100">
                                    <input type="text" class="form-control h-100" name="search" placeholder="Look for Blogs">
                                    <button type="submit" name="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </form>
                            </div>

                            @await Component.InvokeAsync("CategoryComponent")

                            @await Component.InvokeAsync("FeaturedBlogComponent")

                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="note">
                            <div class="showing">
                                @if (Model.Count() != 0)
                                {
                                    <p>There are @ViewBag.BlogCount of blogs</p>
                                }
                                else
                                {
                                    <p>There are @Model.Count() of blogs</p>
                                }
                            </div>
                        </div>
                        <div class="products">
                            <div class="row">
                                @foreach (var blog in Model)
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                        <div class="card mb-4">
                                            <div class="image">
                                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                                    <img src="~/img/@blog.Image" style="width: 100%; padding:0;" class="card-img-top" title="Product @blog.Id" alt="Blog @blog.Id">
                                                </a>
                                            </div>
                                            <div class="card-body">
                                                <a style="color: #18181d;" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                                    <h5 class="card-title mt-3"> @blog.Name </h5>
                                                </a>
                                                <p>Posted On <span> @blog.Author.PostedDate.ToString("dd/MM/yyyy") </span></p>
                                                @if (blog.Description.Length >= 245)
                                                {
                                                    <p class="card-text pt-0" style="display:inline;">@blog.Description.Substring(0, 245)</p><a style="color:#838383;" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">...</a>
                                                }
                                                else
                                                {
                                                    <p>@blog.Description</p>
                                                }

                                                <div class="button">
                                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">READ MORE</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <section id="blog_pagination">
                            <div class="container">
                                <div class="row">
                                    <ul class="pagination w-100 justify-content-center">
                                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                                        {
                                            if (i == ViewBag.Page)
                                            {
                                                if (Model.Count() != 0)
                                                {
                                                    <li style="pointer-events:none; margin-right:10px; background:white;"><a class="disabled" href="/Blog?page=@i">@i</a></li>
                                                }
                                                else
                                                {
                                                    <li style="display:none;"><a class="disabled" href="/Blog?page=@i">@i</a></li>
                                                }
                                            }
                                            else
                                            {
                                                if (Model.Count() != 0)
                                                {
                                                    <li style="margin-right:10px;"><a href="/Blog?page=@i">@i</a></li>
                                                }
                                                else
                                                {
                                                    <li style="display: none;"><a href="/Blog?page=@i">@i</a></li>
                                                }
                                            }


                                        }
                                    </ul>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
        <!-- BLOG LIST PART END -->
